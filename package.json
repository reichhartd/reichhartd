{
    "name": "reichhartd",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.11.0",
        "@material-ui/icons": "^4.9.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "ts:verify": "tsc --noEmit",
        "eslint": "eslint src/**/*.{ts,tsx}",
        "prettier": "prettier --write . --ignore-path ./.prettierignore",
        "lighthouse": "npm run build && node scripts/lighthouse.js",
        "analyze": "npm run build -- --stats && webpack-bundle-analyzer build/bundle-stats.json"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run ts:verify && npm run eslint && pretty-quick --staged && npm run lighthouse"
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.5",
        "@testing-library/react": "^11.1.2",
        "@testing-library/user-event": "^12.2.2",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.7",
        "@types/react": "^16.9.56",
        "@types/react-dom": "^16.9.9",
        "@types/react-router-dom": "^5.1.6",
        "chrome-launcher": "^0.13.4",
        "husky": "^4.3.0",
        "lighthouse": "^6.4.1",
        "prettier": "2.1.2",
        "pretty-quick": "^3.1.0",
        "serve": "^11.3.2",
        "typescript": "^4.0.5",
        "webpack-bundle-analyzer": "^4.1.0"
    }
}
