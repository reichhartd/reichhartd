{
    "name": "reichhartd",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.9.1",
        "@material-ui/icons": "^4.9.1",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.4.0",
        "@testing-library/user-event": "^7.2.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.3.1",
        "typescript": "^3.7.5"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "ts:verify": "tsc --noEmit",
        "eslint": "eslint src/**/*.{ts,tsx}",
        "prettier": "prettier --write ./**/*.{ts,tsx,json,yml,yaml,html,md,css} --ignore-path ./.prettierignore",
        "lighthouse": "npm run build && node scripts/lighthouse.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run ts:verify && npm run eslint && pretty-quick --staged && npm run lighthouse"
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/jest": "^24.9.1",
        "@types/node": "^12.12.26",
        "@types/react": "^16.9.19",
        "@types/react-dom": "^16.9.5",
        "@types/react-router-dom": "^5.1.3",
        "chrome-launcher": "^0.13.4",
        "husky": "^4.2.1",
        "lighthouse": "^6.4.1",
        "prettier": "1.19.1",
        "pretty-quick": "^2.0.1",
        "serve": "^11.3.2"
    }
}
